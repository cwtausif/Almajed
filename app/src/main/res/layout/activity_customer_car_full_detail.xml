<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".customer.CustomerCarFullDetailActivity">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:layout_height="match_parent">
                <TextView
                    android:text="Vehicle Details"
                    android:textColor="@color/yellow"
                    android:textSize="@dimen/pics_upload_size"
                    android:visibility="gone"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="110sp"
                    >
                    <ImageView
                        android:id="@+id/imageOne"
                        android:src="@drawable/add_picture"
                        android:focusableInTouchMode="true"
                        android:scaleType="fitXY"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        />
                    <ImageView
                        android:id="@+id/imageTwo"
                        android:src="@drawable/add_picture"
                        android:scaleType="fitXY"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        />
                    <ImageView
                        android:id="@+id/imageThree"
                        android:src="@drawable/add_picture"
                        android:scaleType="fitXY"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        />
                </LinearLayout>
                <TextView
                    android:text="@string/current_status"
                    android:textColor="@color/yellow"
                    android:textSize="@dimen/reg_labels"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="5sp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/fullShowStatus"
                    android:textColor="@color/yellow"
                    android:text="status"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:textSize="@dimen/reg_labels"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="@string/comments"
                    android:textColor="@color/yellow"
                    android:textSize="@dimen/reg_labels"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="5sp"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/commentTV"
                    android:textColor="@color/yellow"
                    android:inputType="textMultiLine"
                    android:gravity="top"
                    android:scrollbars="vertical"
                    android:background="@drawable/mystyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <LinearLayout
                    android:layout_marginTop="10sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3">
                    <TextView
                        android:text="Charges  "
                        android:inputType="number"
                        android:textColor="@color/yellow"
                        android:textSize="@dimen/reg_labels"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <EditText
                        android:id="@+id/chargesTV"
                        android:layout_width="wrap_content"
                        android:editable="false"
                        android:ems="11"
                        android:gravity="center"
                        android:inputType="number"
                        android:layout_weight="2"
                        android:textColor="@color/yellow"
                        android:background="@drawable/mystyle"
                        android:layout_height="30sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3">
                    <TextView
                        android:text="Car No    "
                        android:textColor="@color/yellow"
                        android:textSize="@dimen/reg_labels"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                    <EditText
                        android:id="@+id/carnoTV"
                        android:layout_width="wrap_content"
                        android:ems="11"
                        android:gravity="center"
                        android:background="@drawable/mystyle"
                        android:inputType="text"
                        android:textColor="@color/yellow"
                        android:layout_weight="2"
                        android:editable="false"
                        android:layout_height="30sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3">
                    <TextView
                        android:text="Customer"
                        android:textColor="@color/yellow"
                        android:textSize="@dimen/reg_labels"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                    <EditText
                        android:id="@+id/customerTV"
                        android:layout_width="wrap_content"
                        android:ems="11"
                        android:gravity="center"
                        android:background="@drawable/mystyle"
                        android:inputType="text"
                        android:textColor="@color/yellow"
                        android:layout_weight="2"
                        android:editable="false"
                        android:layout_height="30sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3">
                    <TextView
                        android:text="Contact   "
                        android:textColor="@color/yellow"
                        android:textSize="@dimen/reg_labels"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                    <EditText
                        android:id="@+id/cantactTV"
                        android:layout_width="wrap_content"
                        android:ems="11"
                        android:background="@drawable/mystyle"
                        android:inputType="number"
                        android:textColor="@color/yellow"
                        android:gravity="center"
                        android:layout_weight="2"
                        android:layout_height="30sp" />
                </LinearLayout>
                <Button
                    android:id="@+id/goBackBtn"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="10sp"
                    android:text="@string/back"
                    android:textColor="@color/white"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/yellow"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp" />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/expanded_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"/>
        <ImageView
            android:id="@+id/expanded_imagetwo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/expanded_imagethree"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"/>

    </FrameLayout>

</ScrollView>

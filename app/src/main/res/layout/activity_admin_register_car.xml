<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".admin.AdminRegisterCarActivity">
    <LinearLayout
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_height="match_parent">
        <TextView
            android:text="@string/pics_upload"
            android:textColor="@color/yellow"
            android:textSize="@dimen/pics_upload_size"
            android:gravity="left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120sp"
            android:weightSum="3">
            <ImageView
                android:id="@+id/imageOne"
                android:padding="2sp"
                android:src="@drawable/imageupload"
                android:focusableInTouchMode="true"
                android:scaleType="fitXY"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/imageTwo"
                android:padding="5sp"
                android:src="@drawable/imageupload"
                android:scaleType="fitXY"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/imageThree"
                android:padding="5sp"
                android:src="@drawable/imageupload"
                android:scaleType="fitXY"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="120dp" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/currentStatus"
                android:text="@string/current_status"
                android:textColor="@color/yellow"
                android:textSize="@dimen/pics_upload_size"
                android:layout_width="wrap_content"
                android:gravity="left"
                android:layout_height="wrap_content" />

            <Spinner
                android:id="@+id/currentStatus_spin"
                android:layout_marginLeft="50dp"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@id/currentStatus"
                android:backgroundTint="@color/yellow"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <TextView
            android:text="@string/comments"
            android:textColor="@color/yellow"
            android:textSize="@dimen/pics_upload_size"
            android:layout_width="match_parent"
            android:gravity="left"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/commentTV"
            android:textColor="@color/yellow"
            android:inputType="textMultiLine"
            android:scrollbars="vertical"
            android:gravity="top"
            android:maxLines="5"
            android:hint="Write some description..."
            android:background="@drawable/mystyle"
            android:layout_width="match_parent"
            android:layout_height="100sp" />
        <LinearLayout
            android:layout_marginTop="10sp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">
            <TextView
                android:text="Charges  "
                android:inputType="number"
                android:textColor="@color/yellow"
                android:textSize="@dimen/reg_labels"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/chargesTV"
                android:layout_width="wrap_content"
                android:ems="11"
                android:gravity="center"
                android:inputType="number"
                android:layout_weight="2"
                android:textColor="@color/yellow"
                android:background="@drawable/mystyle"
                android:layout_height="30sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10sp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">
            <TextView
                android:text="Car No    "
                android:textColor="@color/yellow"
                android:textSize="@dimen/reg_labels"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 />
            <EditText
                android:id="@+id/carnoTV"
                android:layout_width="wrap_content"
                android:ems="11"
                android:gravity="center"
                android:background="@drawable/mystyle"
                android:inputType="number"
                android:textColor="@color/yellow"
                android:layout_weight="2"
                android:layout_height="30sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10sp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">
            <TextView
                android:text="Customer"
                android:textColor="@color/yellow"
                android:textSize="@dimen/reg_labels"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <EditText
                android:id="@+id/customerTV"
                android:layout_width="wrap_content"
                android:ems="11"
                android:gravity="center"
                android:background="@drawable/mystyle"
                android:inputType="text"
                android:textColor="@color/yellow"
                android:layout_weight="2"
                android:layout_height="30sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10sp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">
            <TextView
                android:text="Contact   "
                android:textColor="@color/yellow"
                android:textSize="@dimen/reg_labels"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <EditText
                android:id="@+id/cantactTV"
                android:layout_width="wrap_content"
                android:ems="11"
                android:background="@drawable/mystyle"
                android:inputType="number"
                android:textColor="@color/yellow"
                android:gravity="center"
                android:layout_weight="2"
                android:layout_height="30sp" />
        </LinearLayout>
        <Button
            android:id="@+id/saveNewCar"
            android:layout_marginTop="10sp"
            android:text="@string/save"
            android:layout_gravity="center_horizontal"
            android:background="@color/yellow"
            android:layout_width="@dimen/searchbtnwidth"
            android:textColor="@color/white"
            android:layout_height="30dp" />
    </LinearLayout>

</ScrollView>

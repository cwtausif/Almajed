<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/white"
    tools:context=".admin.AdminLogin">
    <TextView
        android:id="@+id/adminLogin"
        android:text="@string/admin_login"
        android:fontFamily="monospace"
        android:textSize="@dimen/searchTextSize"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginBottom="@dimen/car_search_margin_bottom"
        android:textColor="@color/yellow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/userNameUpdate"
        android:visibility="gone"
        android:textColor="@color/red"
        android:text="User name not change able"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/admin_email"
        android:ems="11"
        android:textColorHint="@color/yellow"
        android:inputType="textEmailAddress"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:background="@drawable/mystyle"
        android:textColor="@color/yellow"
        android:layout_width="wrap_content"
        android:textCursorDrawable="@color/yellow"
        android:layout_height="35sp" />
    <EditText
        android:id="@+id/admin_password"
        android:ems="11"
        android:gravity="center"
        android:inputType="textPassword"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/mystyle"
        android:textColor="@color/yellow"
        android:textColorHint="@color/yellow"
        android:layout_marginTop="20sp"
        android:layout_width="wrap_content"
        android:layout_height="35sp" />
    <CheckBox
        android:id="@+id/isSuperAdminCB"
        android:layout_gravity="center_horizontal"
        android:text="User is super admin ?"
        android:layout_marginTop="2dp"
        android:visibility="gone"
        android:textColor="@color/yellow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/admin_login"
        android:text="@string/login"
        android:background="@color/yellow"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/car_search_margin_bottom"
        android:layout_gravity="center_horizontal"
        android:layout_width="@dimen/searchbtnwidth"
        android:layout_height="wrap_content" />
</LinearLayout>
